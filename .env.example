# Morphorama Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# Database Configuration
# ======================
POSTGRES_DB=morphorama
POSTGRES_USER=morpho_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ======================
# Redis Configuration
# ======================
REDIS_PASSWORD=your_secure_redis_password_here

# ======================
# MinIO Configuration
# ======================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here

# ======================
# AI Service API Keys
# ======================

# Google Gemini / Imagen
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Anthropic Claude (optional - for LLM analysis)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stability AI (optional - alternative to Imagen)
# Get from: https://platform.stability.ai/
STABILITY_API_KEY=your_stability_api_key_here

# Suno AI (for music generation)
# Get from: https://suno.ai/ (or use alternative music API)
SUNO_API_KEY=your_suno_api_key_here

# ======================
# AI Provider Selection
# ======================
# Image generation: "google-imagen" or "stability-ai"
IMAGE_PROVIDER=google-imagen

# LLM for music prompts: "gemini" or "claude"
LLM_PROVIDER=gemini

# Music generation: "suno" (or configure alternative)
MUSIC_PROVIDER=suno

# ======================
# Instagram Integration
# ======================
# Get access token from: https://developers.facebook.com/docs/instagram-basic-display-api/getting-started
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id_here

# ======================
# Security
# ======================
# JWT secret for API authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Session secret for express-session (generate with: openssl rand -base64 32)
# IMPORTANT: This should be different from JWT_SECRET
SESSION_SECRET=your_session_secret_here

# Moderator dashboard password (shared password for all moderators)
MODERATOR_PASSWORD=your_moderator_password_here

# NextAuth secret for frontend authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# Allowed origins for CORS in production (comma-separated)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com

# ======================
# Application URLs
# ======================
# Your domain (update after deployment)
DOMAIN=localhost

# Next.js public API URL
NEXT_PUBLIC_API_URL=http://localhost/api

# NextAuth URL (update with your domain)
NEXTAUTH_URL=http://localhost

# ======================
# Scheduler Configuration
# ======================
# How often to trigger evolution (24h = once per day)
SCHEDULE_INTERVAL=24h

# ======================
# Worker Configuration
# ======================
# Number of concurrent jobs to process
WORKER_CONCURRENCY=2

# ======================
# Development/Production
# ======================
NODE_ENV=production
